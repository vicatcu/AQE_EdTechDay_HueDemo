doctype html
html(ng-app="hue-eggs")
  head
    meta(charset="utf-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1")
    title= title
    link(rel="stylesheet", href="css/bootstrap.min.css")
    link(rel='stylesheet', href='/stylesheets/style.css')

  body
    div.navbar.navbar-static-top
      div.container(role='navigation')
        div.navbar-header
          a.big-text.navbar-brand(href='index.html') Air Quality Egg
          button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='.navbar-collapse')
            span.sr-only' Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
        ul.nav.navbar-nav.navbar-right.collapse.navbar-collapse
          li.dropdown
            a.dropdown-toggle(href='/about', data-target='#', data-toggle='dropdown') About
              span.caret
            ul.dropdown-menu(role='menu')
              li
                a(href='http://airqualityegg.com/') Our Story
              li
                a(href='mailto:support@wickeddevice.com') Contact Us
              li.divider
              li
                a(href='http://shop.wickeddevice.com/blog/') Blog
              li.divider
              li
                a(href='http://twitter.com/vicatcu') Twitter
              li
                a(href='http://facebook.com/airqualityegg') Facebook

    block content
    script(src="jquery.min.js")
    script(src="js/bootstrap.min.js")
    script(src="angular.min.js")
    script(src="colorspaces.js")
    script(src="moment.js")
    script(src="javascripts/app.js")
