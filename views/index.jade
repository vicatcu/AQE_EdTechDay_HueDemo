extends layout

block content
  div.container
    div(ng-controller="EggsController as eggs")
      div(ng-repeat="(key, value) in eggs.config")
        div.row.top-buffer
          div.col-md-4.col-md-offset-2(style="height: 100px;")
            p.space-around.huge-text {{value.alias}}
          div.col-md-1.col-md-offset-2.text-center.white-text(style="height: 100px;", ng-style="eggs.getStyle(key)")
            p.space-around.big-text {{value.concentration}}
      div.row.top-buffer
        div.col-md-4.col-md-offset-2 Last Updated: {{eggs.last_updated}}
        div.col-md-3.col-md-offset-1 Next Update in {{eggs.time_remaining_seconds}} seconds